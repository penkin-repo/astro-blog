---
import {capitalise} from "../utils/utils";
let tagsArray: string[] = Astro.props.tagsArray;
---

{
    tagsArray.map((tag: string, index: number) => (
    <span
            class={
                index % 2 === 0
                    ? "px-3 py-1 bg-green-500 text-white rounded-full text-xs hover:opacity-90"
                    : "px-3 py-1 bg-indigo-500 text-white rounded-full text-xs hover:opacity-90"
            }
    >
            <a href={"/articles/tag/" + tag}>#{capitalise(tag)}</a>
        </span>
        ))
    }
